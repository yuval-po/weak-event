{
	"name": "weak-event",
	"version": "0.0.1",
	"private": true,
	"license": "MIT",
	"author": {
		"name": "yuval-po",
		"url": "https://github.com/yuval-po"
	},
	"keywords": [
		"Events",
		"Weak Event",
		"Typescript",
		"Lightweight",
		"Zero dependencies",
		"No dependencies",
		"FinalizationRegistry",
		"WeakRef"
	],
	"scripts": {
		"lint": "eslint . --ext .js,.ts --max-warnings=0",
		"lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.vue --max-warnings=0 --fix",
		"clean": "shx rm -rf dist",
		"compile-commonjs": "tsc",
		"compile-es6": "tsc -m es6 --outDir ./dist/lib-esm",
		"compile-bundle": "webpack",
		"compile-all": "npm run clean && npm run compile-commonjs && npm run compile-es6 && npm run compile-bundle"
	},
	"files": [
		"dist"
	],
	"directories": {
		"example": "example",
		"lib": "dist"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:yuval-po/ts-events.git"
	},
	"devDependencies": {
		"@types/chai": "^4.2.21",
		"@types/mocha": "^9.0.0",
		"@types/node": "^16.7.10",
		"@typescript-eslint/eslint-plugin": "^4.30.0",
		"@typescript-eslint/parser": "^4.30.0",
		"chai": "^4.1.2",
		"eslint": "^7.32.0",
		"eslint-config-airbnb-base": "^14.2.1",
		"eslint-config-airbnb-typescript": "^14.0.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.24.2",
		"eslint-plugin-prettier": "^4.0.0",
		"prettier": "^2.3.2",
		"shx": "^0.3.3",
		"ts-loader": "^9.2.5",
		"typescript": "^4.4.2",
		"webpack": "^5.52.0",
		"webpack-cli": "^4.8.0"
	}
}