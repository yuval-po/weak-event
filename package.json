{
	"name": "weak-event",
	"version": "1.0.0",
	"private": true,
	"license": "ISC",
	"author": {
		"name": "yuval-po",
		"url": "https://github.com/yuval-po"
	},
	"keywords": [
		"Event",
		"Events",
		"C#",
		"Weak Event",
		"TypeScript",
		"Lightweight",
		"Zero dependencies",
		"No dependencies",
		"FinalizationRegistry",
		"WeakRef",
		"Observer"
	],
	"scripts": {
		"lint": "eslint . --ext .js,.ts --max-warnings=0",
		"lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.vue --max-warnings=0 --fix",
		"clean": "shx rm -rf dist",
		"test": "mocha --node-option allow-natives-syntax -r ts-node/register tests/**/*.spec.ts",
		"cover": "node \"node_modules/nyc/bin/nyc.js\" --reporter=lcov --reporter=text-summary npm run test",
		"compile-commonjs-dev": "tsc",
		"compile-es6-dev": "tsc -m es6 --outDir ./dist/lib-esm",
		"compile-bundle-dev": "webpack --output-path ./dist/bundle",
		"compile-all-dev": "npm run clean && npm run compile-commonjs-dev && npm run compile-es6-dev && npm run compile-bundle-dev",
		"compile-commonjs-release": "tsc --outDir ./src",
		"compile-es6-release": "tsc -m es6 --outDir ./src",
		"compile-bundle-release": "webpack --output-path ./src",
		"compile-all-release": "npm run clean && npm run compile-commonjs-release && npm run compile-es6-release && npm run compile-bundle-release"
	},
	"files": [
		"dist"
	],
	"directories": {
		"example": "example",
		"lib": "dist"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:yuval-po/ts-events.git"
	},
	"devDependencies": {
		"@types/chai": "^4.2.21",
		"@types/chai-as-promised": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "^16.10.1",
		"@typescript-eslint/eslint-plugin": "^4.30.0",
		"@typescript-eslint/parser": "^4.30.0",
		"chai": "^4.1.2",
		"chai-as-promised": "^7.1.1",
		"eslint": "^7.32.0",
		"eslint-config-airbnb-base": "^14.2.1",
		"eslint-config-airbnb-typescript": "^14.0.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.24.2",
		"eslint-plugin-prettier": "^4.0.0",
		"mocha": "^9.1.2",
		"nyc": "^15.1.0",
		"prettier": "^2.3.2",
		"shx": "^0.3.3",
		"ts-loader": "^9.2.5",
		"ts-node": "^10.2.1",
		"typescript": "^4.4.2",
		"webpack": "^5.52.0",
		"webpack-cli": "^4.8.0"
	}
}
