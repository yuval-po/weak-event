{
	"compilerOptions": {
		"target": "ES2021",
		"module": "commonjs",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strictPropertyInitialization": false,
		"sourceMap": true,
		"declaration": true,
		"baseUrl": ".",
		"outDir": "./dist/lib",
		"types": [
			"node",
			"mocha",
			"chai"
		],
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"lib": [
			"ES2021",
			"DOM"
		]
	},
	"include": [
		"webpack.config.js",
		"src/**/*.ts",
		"tests/**/*.ts",
		"examples/**/*.ts",
	],
	"exclude": [
		"node_modules",
		"examples",
		"test"
	]
}