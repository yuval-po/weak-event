{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Mocha All",
			"program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
			"args": [
				"-r",
				"ts-node/register",
				"--timeout",
				"99999",
				"--node-option",
				"allow-natives-syntax",
				"--colors",
				"${workspaceFolder}/tests/**/*.spec.ts",
			],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"protocol": "inspector",
			"skipFiles": [
				"<node_internals>/**"
			]
		},
	]
}